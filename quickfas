############################################################################

#-----------------------------OPTIMIZATIONS--------------------------------#

############################################################################

#---------------------------------ARCH-------------------------------------#

#------------------------------UPDATE FIRST--------------------------------#

sudo pacman -Syu

#-----------------------------ENABLE PARRALEL DOWNLOADS--------------------#
EDIT /etc/pacman.conf and add the following line:

# Un-comment this line
#ParallelDownloads = 5

#-----------------------------USE A LIGHTWEIGHT DESKTOP-------------------#
-XFCE
-LXQT
-I3
-HYPRLAND
-OPENBOX
-DWM
-BSPWM
-AWM(AWESOME WM)
-RIVER
-SWAY

#----------------------------OPTIMIZE THE FILE SYSTEM---------------------#

sudo systemctl enable fstrim.timer

#--------------------------------------------------------------------------#

#-----------------------------INSTALL PRELOAD------------------------------#

sudo pacman -S preload

#-----------------------------USE ZRAM-------------------------------------#

sudo pacman -S zram-generator

#--------------------------------------------------------------------------#

#------------------------------USE AUR HELPERS-----------------------------#

-yay
-paru

#--------------------------------------------------------------------------#

#------------------------------REGULAR MAINTENANCE-------------------------#

sudo pacman -Rns $(pacman -Qdtq)
sudo pacman -Scc
sudo pacman -Sc
sudo journalctl --vacuum-time=2weeks
rm -rf ~/.cache/thumbnails/*
paru -C (clean)

#---------------------------------------------------------------------------#




